<Window x:Class="HoaDon.wdMaXacNhan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		FontSize="14"
		AllowsTransparency="True"
		Background="Transparent"
		WindowStartupLocation="CenterScreen" 
		Title="Xác nhận"
		ResizeMode="NoResize" WindowStyle="None" Height="160" Width="300">
	<Grid>
		<Border Background="White"
		CornerRadius="10"
			Margin="3"
		BorderThickness="0 0 2 2">
			<Border.Effect>
				<DropShadowEffect ShadowDepth="2"/>
			</Border.Effect>
		</Border>
		<DockPanel Margin="20">
			<WrapPanel DockPanel.Dock="Bottom" 
					   FocusManager.FocusedElement="{Binding ElementName=pwbMaXacNhan}"
					HorizontalAlignment="Right">
				<Button IsCancel="True" Click="Button_Click_1" Width="70"
					Style="{StaticResource MaterialDesignPaperSecondaryButton}">Hủy
				</Button>
				<Button IsDefault="True" Margin="10 0" Width="70" Click="Button_Click_2">
					OK
				</Button>
			</WrapPanel>
			<TextBlock DockPanel.Dock="Top">
				Đây là chức năng dành cho người quản lý. <LineBreak/>
				Vui lòng nhập mã xác nhận:</TextBlock>
			<PasswordBox HorizontalContentAlignment="Center" Margin="10" x:Name="pwbMaXacNhan"/>
		</DockPanel>
	</Grid>
</Window>
